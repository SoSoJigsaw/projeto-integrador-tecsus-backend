{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "dockerfilePath": "Dockerfile.billing",
  "deploy": {
    "runtime": "UNSPECIFIED",
    "numReplicas": 1,
    "healthcheckPath": "/",
    "sleepApplication": true,
    "restartPolicyType": "ON_FAILURE",
    "healthcheckTimeout": 300,
    "restartPolicyMaxRetries": 3
  }
}
